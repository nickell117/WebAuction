@model User

@{
    ViewBag.Title = "Login";
}

<form asp-controller="User" asp-action="Login" method="post">
    <table>
        <tr>
            <th class="text-right"> Email Address: </th>
            <td>
                <input asp-for="Email" placeholder="Email Address" title="Enter your Email Address here" />
            </td>
        </tr>
        <tr>
            <th class="text-right"> Password: </th>
            <td>
                <input asp-for="Password" placeholder="Password" title="Enter your Password here" />
            </td>
        </tr>
        <tr>
            <td colspan="2" class="text-center">
                <input type="submit" value="Login" />
            </td>
        </tr>
    </table>
</form>