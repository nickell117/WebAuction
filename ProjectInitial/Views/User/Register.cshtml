@model User

<h3> Register </h3>

<form asp-controller="User" asp-action="Register" method="post">
    <table>
        <tbody>
            <tr>
                <th class="text-right"> Username (Email): </th>
                <td> <input asp-for="Email" placeholder="Email Address" title="Enter your Email Address" /> </td>
            </tr>

            <tr>
                <th class="text-right"> Password: </th>
                <td> <input asp-for="Password" placeholder="Password" title="Enter your Password" /> </td>
            </tr>
        </tbody>

        <tfoot>
            <tr>
                <th colspan="2"> <hr /> </th>
            </tr>
            <tr>
                <td class="text-center" colspan="2">
                    <input type="submit" class="btn btn-success btn-sm"
                           value="Register" />
                    <button asp-controller="User" asp-action="Index"
                            formmethod="get"
                            class="btn btn-danger btn-sm">
                        Never Mind
                    </button>
                </td>
            </tr>
        </tfoot>
    </table>
</form>
